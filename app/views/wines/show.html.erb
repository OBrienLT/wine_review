<article class = "wine">
	<header>
		<h2><%= @wine.year %> <%= @wine.name %></h2>
	</header>
	<p><%= @wine.winery %> (<%= @wine.country %>)</p>
	<p><i><%= @wine.varietal %></i></p>
	<p><label>Average Rating:</label> <%= format_average_log_entry(@wine) %></p>
</article>
<p>Read all <%= link_to pluralize(@wine.log_entries.size, 'log entry'), wine_log_entries_path(@wine) %></p>

<%= link_to 'Create a Log Entry', new_wine_log_entry_path(@wine),
		remote: true,
		data: { 'update-target' => 'review_form_container' },
		class: 'btn btn-primary' %>

<div id="review_form_container"></div>

<p><%= link_to 'Edit this wine', edit_wine_path(@wine) %> or <%= link_to 'Back to all wines', wines_path %></p>

<%= button_to 'Delete', @wine,
				method: :delete,
				data: { confirm: 'Are you sure you want to delete this wine?' } %>